 module Citizen where

-- import Authority

data CitizenData = CitizenData with 
  firstName : Text
  lastName : Text
  address : Text
    deriving (Eq, Show)

type CitizenKey = (Party, Int)

-- MAIN_TEMPLATE_BEGIN
template Citizen with
    id : Int
    persData : CitizenData
    internalAffairsOffice : Party
    observers : [Party]
  where
    signatory internalAffairsOffice
    observer observers

    key (internalAffairsOffice, id)  : CitizenKey
    maintainer key._1
